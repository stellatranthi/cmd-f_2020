<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/date_view"
            android:layout_width="266dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            android:text="Date" />

        <ImageView
            android:id="@+id/rose_view"
            android:layout_width="254dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/all_rose" />

        <TextView
            android:id="@+id/mood_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_view"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:text="Today's Mood:" />

        <ImageView
            android:id="@+id/sunny_view"
            android:layout_width="248dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/all_sunny" />

        <TextView
            android:id="@+id/flow_view"
            android:layout_width="202dp"
            android:layout_height="75dp"
            android:layout_below="@+id/date_view"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="16dp"
            android:text="Today's Flow:" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>